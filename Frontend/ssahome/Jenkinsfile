pipeline {
	agent any

	tools {
		nodejs "nodejs-18.17.1"
	}

	stages {
		stage('React Build') {
			steps {
				dir('Frontend/ssahome') {
					sh 'npm install'
					sh 'npm i react-chartjs-2'
					sh 'npm i @faker-js/faker'
					sh 'npm run build'
				}
			}
		}

		stage('Docker Build') {
			steps {
				dir('Frontend/ssahome') {
					sh 'docker build -t eagerbeaver:latest .'
				}
			}
		}

		stage('Deploy') {
			steps{
				sh 'docker rm -f front'
				sh 'docker run -d --name front -p 3126:3126 eagerbeaver:latest'
				}
		}

		stage('Finish') {
			steps{
				sh 'docker images -qf dangling=true | xargs -I{} docker rmi {}'
			}
		}
	}
}