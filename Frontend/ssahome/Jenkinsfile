pipeline {
	agent any

	tools {
		nodejs "nodejs-18.17.1"
	}

	stages {
		stage('React Build') {
			steps {
				dir('Frontend/ssahome') {
					sh 'npm install'
					sh 'npm run build'
				}
			}
		}

		stage('Docker Build') {
			steps {
				dir('Frontend/ssahome') {
					sh 'docker build -t eagerbeaverFe:latest .'
				}
			}
		}

		stage('Deploy') {
			steps{
				sh 'docker rm -f front'
				sh 'docker run -d --name front -p 3126:3126 eagerbeaverFe:latest'
				}
		}

	}
}
